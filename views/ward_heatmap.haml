.heatmap
  %ol.months
    - (1..12).each do |month|
      %li
        = Date::ABBR_MONTHNAMES[month]
        -#%a{:href => "#", :"data-month" => month} 
          = Date::ABBR_MONTHNAMES[month]
  %ol.weekdays
    - (0..6).each do |day|
      %li
        = Date::ABBR_DAYNAMES[day]
        -#%a{:href => "#", :"data-weekday" => day} 
          = Date::ABBR_DAYNAMES[day]

  .chart{:id => "calendar-#{identity}-#{year}"}

